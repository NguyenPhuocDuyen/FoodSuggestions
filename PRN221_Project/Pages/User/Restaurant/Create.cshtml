@page
@model PRN221_Project.Pages.User.Restaurant.CreateModel
@{
    ViewData["Title"] = "Thêm nhà hàng";
}
 
<div class="cart-table-area clearfix section-padding-100">
    <div class="text-center">
        <section class="book_section layout_padding">
            <div class="container">
                <div class="heading_container">
                    <h2>
                        Thêm Nhà Hàng
                    </h2>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form_container">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div>
                                    <input class="form-control" asp-for="Restaurant.Name" placeholder="Tên Nhà Hàng" class="form-control" />
                                    <span asp-validation-for="Restaurant.Name" class="text-danger"></span>
                                </div>

                                <div>
                                    <input class="form-control" asp-for="Restaurant.Phone" placeholder="Số điện thoại nhà hàng"/>
                                    <span asp-validation-for="Restaurant.Phone" class="text-danger"></span>
                                </div>

                                <div>
                                    <input class="form-control" placeholder="Địa chỉ" asp-for="Restaurant.Address" class="form-control" />
                                    <span asp-validation-for="Restaurant.Address" class="text-danger"></span>
                                </div>
                                <div>
                                    <textarea asp-for="Restaurant.Description" class="w-100 k2"  placeholder=" Mô tả"></textarea>
                                    <span asp-validation-for="Restaurant.Description" class="text-danger"></span>
                                </div>
                                <div>
                                    <div class="form-group">
                                    <label asp-for="FileUpload" class="control-label"></label>
                                    <input asp-for="FileUpload" class="form-control" />
                                    <span asp-validation-for="FileUpload" class="text-danger">@ViewData["mess"]</span>
                                </div>
                                </div>
                                <div class="btn_box">
                                    <button>
                                        Thêm Nhà Hàng
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d7838.684254869503!2d106.70676642475235!3d10.785086936675276!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1svi!2s!4v1547181657956" width="430" height="300"
                                frameborder="1" style="border:solid" allowfullscreen>
                        </iframe>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }